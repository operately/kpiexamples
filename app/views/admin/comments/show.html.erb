<h1 class="text-2xl font-semibold mb-6">
  <%= link_to("Admin", admin_root_path, class: "text-operately-blue hover:text-operately-dark-blue underline") %> /
  <%= link_to("Comments", admin_comments_path, class: "text-operately-blue hover:text-operately-dark-blue underline") %> /
  Comment <%= @comment.id %>
</h1>

<div class="mb-4">
  <% if @comment.commentable_type == "Kpi" -%>
    <% kpi = @comment.commentable_type.constantize.find(@comment.commentable_id) -%>
    Comment for KPI <%= link_to(kpi.name, category_kpi_path(kpi.category, kpi), class: "text-operately-blue hover:text-operately-dark-blue underline") %>
<% end -%>
</div>

<div class="mb-4 bg-slate-200">
  <%= comment_apply_style(@comment.content) %>
</div>

<div class="">
  <%= link_to("Delete", [:admin, @comment], data: { turbo_method: "delete", turbo_confirm: "Are you SURE?" }, class: "text-red-500 hover:text-red-800 underline") %>
</div>
