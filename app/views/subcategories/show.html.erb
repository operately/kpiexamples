<% set_page_title("#{@subcategory.name} in #{@category.name}") -%>

<% content_for :head do -%>
  <%= meta_description("Dive deeper into #{@category.name} KPIs by exploring #{@subcategory.name}.") %>
<% end -%>

<div class="flex flex-row items-center space-x-2">
  <p class="text-gray-600">
    <%= link_to(@category.name, @category, class: "text-operately-blue hover:text-operately-dark-blue underline") %>
  </p>
</div>

<h1 class="text-4xl font-bold mt-2"><%= @subcategory.name %></h1>

<div class="mt-4">
  <% @kpis.each do |kpi| -%>
    <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out mb-4">
      <%= link_to(kpi.name, category_kpi_path(kpi.category, kpi), class: "text-2xl font-bold text-operately-blue hover:text-operately-dark-blue underline") %>
      <%= unit_emoji_tag(kpi.unit) %>
      <p class="text-gray-700 mt-2"><%= substring_until_period(kpi.description) %></p>
    </div>
  <% end -%>

  <%= paginate @kpis %>
</div>
