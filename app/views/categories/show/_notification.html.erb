<h3 class="mb-4">KPIs for this category are coming soon!</h3>
<p class="mb-4">Leave your email, and we'll notify you when we add KPIs to this category.</p>

<% if @notification.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">Oops!</strong>
    <span class="block sm:inline">There were some errors with your submission:</span>
    <ul class="mt-3 list-disc list-inside">
      <% @notification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @notification, url: notifications_path, class: "bg-white p-6 rounded shadow-md max-w-lg mx-auto" do |f| %>
  <%= f.hidden_field :category_id, value: @category.id %>
  <div class="mb-4">
    <%= f.label :email, "Email Address:", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.email_field :email, value: current_user&.email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= f.submit "Notify Me", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
