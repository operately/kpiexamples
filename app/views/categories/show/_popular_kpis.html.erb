<% @popular_kpis.each do |kpi| -%>
  <div class="p-6 md:p-8 mb-4 relative bg-white bg-opacity-60 border border-blue-200 shadow-md rounded-md hover:bg-opacity-70 hover:border-blue-300 hover:shadow-lg">
    <h3>
      <%= link_to(kpi.name, category_kpi_path(kpi.category, kpi), class: "text-2xl font-bold text-operately-blue hover:text-operately-dark-blue underline") %>
      <%= unit_emoji_tag(kpi.unit) %>
    </h3>

    <p class="text-gray-700 mt-2"><%= simple_format(kpi.description, class: "mb-4") %></p>

    <% if kpi.formula.present? -%>
      <div class="mt-3">
        <h4 class="font-semibold mt-4 mb-1">Formula</h2>
        <p class="font-mono"><%= kpi.formula %></p>
      </div>
    <% end -%>

    <% if kpi.example.present? -%>
      <div class="mt-3">
        <h4 class="font-semibold mt-4 mb-1">Example</h2>
        <p><%= simple_format(kpi.example, class: "mb-4") %></p>
      </div>
    <% end -%>
  </div>
<% end -%>
